name: Generate Schedules

on:
  schedule:
    - cron: '*/10 * * * *'  # Кожні 10 хвилин
  workflow_dispatch:

jobs:
  generate:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v3
      
      - name: Set up Python
        uses: actions/setup-python@v4
        with:
          python-version: '3.9'
      
      - name: Install dependencies
        run: pip install matplotlib numpy
      
      - name: Download JSON data
        run: |
          curl -o Vinnytsiaoblenerho.json /data/Vinnytsiaoblenerho.json
      
      - name: Generate individual schedules
        run: |
          python render_png.py --json Vinnytsiaoblenerho.json --out ./output
      
      - name: Generate all schedules today
        run: |
          python render_all_today.py --json Vinnytsiaoblenerho.json --out ./output
      
      - name: Commit and push
        run: |
          git config user.name "Bot"
          git config user.email "bot@example.com"
          git add output/
          git commit -m "Update schedules $(date)" || true
          git push
